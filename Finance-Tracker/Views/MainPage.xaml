<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Finance_Tracker.Views.MainPage">
    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0"
               Text="Expense/Income Dashboard"
               FontSize="24"
               HorizontalOptions="Center" />

        <CollectionView x:Name="expensesCollectionView"
                        SelectionMode="Single"
                        SelectionChanged="expensesCollectionView_SelectionChanged"
                        Grid.Row="1">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Vertical"
                                 Padding="10">
                        <Label Text="{Binding Amount}"
                               FontSize="16" />
                        <Label Text="{Binding Description, StringFormat='Description: {0}'}"
                               FontSize="14" />
                        <Label Text="{Binding Time, StringFormat='Time: {0:dd/MM/yyyy}'}"
                               FontSize="14" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
